        thesis: { f100: "Ø§Ù„ØªÙ…ÙŠÙ…ÙŠØŒ Ø£Ø­Ù…Ø¯ Ø¬Ø§Ø³Ù….", f245: "ØªØ·ÙˆÙŠØ± Ù†Ø¸Ù… Ø§Ù„Ù…Ø¹Ù„ÙˆÙ…Ø§Øª ÙÙŠ Ø§Ù„Ù…ÙƒØªØ¨Ø§Øª Ø§Ù„Ø¬Ø§Ù…Ø¹ÙŠØ©.", f502: "Ø£Ø·Ø±ÙˆØ­Ø© (Ø¯ÙƒØªÙˆØ±Ø§Ù‡) - Ø¬Ø§Ù…Ø¹Ø© Ø¨ØºØ¯Ø§Ø¯ØŒ ÙƒÙ„ÙŠØ© Ø§Ù„Ø¢Ø¯Ø§Ø¨ØŒ 2022.", f300: "300 ÙˆØ±Ù‚Ø© Ø› 30 Ø³Ù….", f336: "text", f338: "volume" },
        electronic: { f245: "Ù…Ø¬Ù„Ø© Ø§Ù„Ù…ÙƒØªØ¨Ø§Øª Ø§Ù„Ø±Ù‚Ù…ÙŠØ© [Ù…ÙˆØ±Ø¯ Ø¥Ù„ÙƒØªØ±ÙˆÙ†ÙŠ].", f264: "Ø¯Ø¨ÙŠ : Ù…Ù†ØµØ© Ø§Ù„Ù†Ø´Ø± Ø§Ù„Ø±Ù‚Ù…ÙŠØŒ 2021-", f336: "text", f337: "computer", f338: "online resource", f500: "Ù…ØªØ§Ø­ Ø¹Ø¨Ø± Ø§Ù„Ø¥Ù†ØªØ±Ù†Øª." }
    };

    function loadSample(type) {
        clearForm();
        const data = samples[type];
        for (let id in data) { document.getElementById(id).value = data[id]; }
        updateDisplay();
    }

    function clearForm() {
        document.querySelectorAll('#marcForm input').forEach(i => i.value = '');
        updateDisplay();
    }

    function updateDisplay() {
        let text = "LDR 00000nam a2200000 i 4500\n";
        document.querySelectorAll('#marcForm input').forEach(input => {
            if(input.value) text += `${input.getAttribute('data-tag')}  ##  $a ${input.value}\n`;
        });
        document.getElementById('marcDisplay').innerText = text;
    }

    function exportExcel() {
        let rows = [["Tag", "Data"]];
        document.querySelectorAll('#marcForm input').forEach(i => { if(i.value) rows.push([i.getAttribute('data-tag'), i.value]); });
        let ws = XLSX.utils.aoa_to_sheet(rows);
        let wb = XLSX.utils.book_new();
        XLSX.utils.book_append_sheet(wb, ws, "MARC");
        XLSX.writeFile(wb, "Emad_Kazem_Training.xlsx");
    }
